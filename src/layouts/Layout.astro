---
import "../styles/global.css";

const {
  title = "IELTS Corner",
  description = "High-level IELTS & CELPIP prep for serious learners.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a class="brand" href="/">
          <img src="/logo.gif" alt="IELTS Corner logo" />
          <div class="brand-title">
            <strong>IELTS Corner</strong>
            <span>Your bridge to English in Canada</span>
          </div>
        </a>

        <nav class="nav" aria-label="Primary">
          <a href="/ielts">IELTS</a>
          <a href="/celpip">CELPIP</a>
          <a href="/lessons">Free Lessons</a>
          <a href="/ebook">eBook</a>
        </nav>

        <div class="header-right">
          <div class="social" aria-label="Social links">
            <a href="https://www.instagram.com/ieltscorner.ca" target="_blank" rel="noreferrer">IG</a>
            <a href="https://www.youtube.com/@KaraAbdolmaleki" target="_blank" rel="noreferrer">YT</a>
            <a href="https://t.me/Kaysenglishcorner" target="_blank" rel="noreferrer">TG</a>
          </div>
          <a class="cta" href="/tutoring">Book a Lesson</a>
        </div>
      </div>

      <div class="container" style="padding-bottom: var(--s-5);">
        <div class="ad-slot">Ad placeholder (AdSense)</div>
      </div>
    </header>

    <main class="site-main">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-inner">
          <div>
            <h3>IELTS Corner</h3>
            <div class="muted">Band 7+ focused lessons for IELTS &amp; CELPIP.</div>
          </div>

          <div>
            <h3>Explore</h3>
            <div class="footer-links">
              <a href="/lessons">Lessons</a>
              <a href="/tutoring">Tutoring</a>
              <a href="/essay-correction">Essay correction</a>
              <a href="/ebook">eBook</a>
            </div>
          </div>

          <div>
            <h3>Social</h3>
            <div class="footer-links">
              <a href="https://www.instagram.com/ieltscorner.ca" target="_blank" rel="noreferrer">Instagram</a>
              <a href="https://www.youtube.com/@KaraAbdolmaleki" target="_blank" rel="noreferrer">YouTube</a>
              <a href="https://t.me/Kaysenglishcorner" target="_blank" rel="noreferrer">Telegram</a>
            </div>
          </div>
        </div>

        <div class="footer-bottom">
          <div>© {new Date().getFullYear()} IELTS Corner</div>
          <div class="muted-2">ieltscorner.com → redirects to ieltscorner.ca</div>
        </div>
      </div>
    </footer>
  </body>
</html>
