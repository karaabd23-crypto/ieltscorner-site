---
/* src/layouts/Layout.astro */
import "../styles/global.css";

type Props = {
  title?: string;
  description?: string;
};

const {
  title = "IELTS Corner",
  description = "High-level IELTS & CELPIP training: clear explanations, real practice, and frameworks that match scoring.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a class="brand" href="/" aria-label="IELTS Corner home">
          <img src="/logo.gif" alt="IELTS Corner logo" width="40" height="40" loading="eager" />
          <div class="brand-title">
            <strong>IELTS Corner</strong>
            <span>IELTS &amp; CELPIP Training</span>
          </div>
        </a>

        <nav class="nav" aria-label="Primary navigation">
          <a href="/ielts">IELTS</a>
          <a href="/celpip">CELPIP</a>
          <a href="/lessons">Lessons</a>
          <a href="/tutoring">Tutoring</a>
          <a href="/essay-correction">Essay Correction</a>
          <a href="/ebook">CELPIP eBook</a>
        </nav>

        <div class="header-right">
          <div class="social" aria-label="Social links">
            <a href="https://www.instagram.com/ieltscorner.ca" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
              IG
            </a>
            <a href="https://www.youtube.com/@KaraAbdolmaleki" target="_blank" rel="noopener noreferrer" aria-label="YouTube">
              YT
            </a>
            <a href="https://t.me/Kaysenglishcorner" target="_blank" rel="noopener noreferrer" aria-label="Telegram">
              TG
            </a>
          </div>
        </div>
      </div>
    </header>

    <main>
  <div class="container">
    <div class="ad-slot">Ad space (future Google AdSense)</div>
  </div>

  <!-- ✅ This is the missing piece -->
  <div class="container">
    <slot />
  </div>
</main>


    <footer class="site-footer">
      <div class="container footer-inner">
        <div>
          <h3>IELTS Corner</h3>
          <p class="muted">
            Focused, high-level training for IELTS &amp; CELPIP test-takers aiming for strong results.
          </p>
        </div>

        <div>
          <h3>Explore</h3>
          <div class="footer-links">
            <a href="/lessons">All lessons</a>
            <a href="/ielts">IELTS section</a>
            <a href="/celpip">CELPIP section</a>
            <a href="/ebook">CELPIP eBook</a>
            <a href="/tutoring">1:1 tutoring</a>
            <a href="/essay-correction">Essay correction</a>
          </div>
        </div>

        <div>
          <h3>Follow</h3>
          <div class="footer-links">
            <a href="https://www.instagram.com/ieltscorner.ca" target="_blank" rel="noopener noreferrer">Instagram @ieltscorner.ca</a>
            <a href="https://www.youtube.com/@KaraAbdolmaleki" target="_blank" rel="noopener noreferrer">YouTube — Kara Abdolmaleki</a>
            <a href="https://t.me/Kaysenglishcorner" target="_blank" rel="noopener noreferrer">Telegram — Kay’s English Corner</a>
          </div>
        </div>
      </div>

      <div class="container footer-bottom">
        <span>© {new Date().getFullYear()} IELTS Corner. All rights reserved.</span>
        <span class="muted-2">Built with Astro.</span>
      </div>
    </footer>
  </body>
</html>
