  <script is:inline>
    function checkExercise1() {
      const questions = document.querySelectorAll("[data-ex1-question]");
      let correct = 0;
      questions.forEach((q) => {
        const correctValue = q.dataset.correct;
        const selected = q.querySelector('input[type="radio"]:checked');
        const feedback = q.querySelector(".exercise-feedback");
        if (!selected) {
          feedback.textContent = "‚è≥ Choose an answer.";
          feedback.className = "exercise-feedback feedback-wait";
          return;
        }
        if (selected.value === correctValue) {
          correct++;
          feedback.textContent = "‚úÖ Correct";
          feedback.className = "exercise-feedback feedback-correct";
        } else {
          feedback.textContent = "‚ùå Not quite. Check the explanation above.";
          feedback.className = "exercise-feedback feedback-wrong";
        }
      });
      const scoreEl = document.getElementById("exercise1-score");
      if (scoreEl) {
        scoreEl.textContent = `Score: ${correct}/${questions.length}`;
      }
    }

    function checkExercise2() {
      const items = document.querySelectorAll("#exercise2 .match-item");
      let correct = 0;
      items.forEach((item) => {
        const correctValue = item.dataset.correct;
        const select = item.querySelector("select");
        const feedback = item.querySelector(".exercise-feedback");
        if (!select.value) {
          feedback.textContent = "‚è≥ Choose a function.";
          feedback.className = "exercise-feedback feedback-wait";
          return;
        }
        if (select.value === correctValue) {
          correct++;
          feedback.textContent = "‚úÖ Correct";
          feedback.className = "exercise-feedback feedback-correct";
        } else {
          feedback.textContent = "‚ùå Not quite. Re-read the examples.";
          feedback.className = "exercise-feedback feedback-wrong";
        }
      });
      const scoreEl = document.getElementById("exercise2-score");
      if (scoreEl) {
        scoreEl.textContent = `Score: ${correct}/${items.length}`;
      }
    }

    function toggleModels() {
      const models = document.querySelectorAll("[data-model]");
      models.forEach((m) => {
        m.classList.toggle("collapsed");
      });
    }
  </script>

